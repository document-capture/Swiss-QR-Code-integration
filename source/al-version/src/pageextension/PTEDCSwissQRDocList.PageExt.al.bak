pageextension 61110 "PTE DC Swiss QR Doc. List" extends "CDC Document List With Image"
{
    actions
    {
        addafter("Vendor Card")
        {

            action("Bank Accounts")
            {
                ApplicationArea = Basic, Suite;
                Caption = 'Bank Accounts';
                Image = BankAccount;
                Enabled = HasDocuments;
                Promoted = true;
                PromotedCategory = Category8;
                PromotedIsBig = true;
                ToolTip = 'View or set up the vendor''s bank accounts. You can set up any number of bank accounts for each vendor.';
                Visible = IsVendor AND ShowVendorCard;

                trigger OnAction()
                var
                    Vendor: Record Vendor;
                begin
                    Vendor.GET(Rec.GetSourceID);
                    PAGE.RUN(PAGE::"Vendor Bank Account List", Vendor);
                end;



            }
        }

    }

    trigger OnAfterGetCurrRecord()
    begin
        IsVendor := Rec.GetSourceTableNo = DATABASE::Vendor;
    end;

    var
        [InDataSet]
        HasDocuments: Boolean;
        [InDataSet]
        IsVendor: Boolean;
}